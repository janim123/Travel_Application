@model Travel_Application.ViewModels.CityPictures

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>City</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPicture" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="City.Id" />
            <div class="form-group">
                <label asp-for="City.Name" class="control-label"></label>
                <input asp-for="City.Name" class="form-control" />
                <span asp-validation-for="City.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City.Country" class="control-label"></label>
                <input asp-for="City.Country" class="form-control" />
                <span asp-validation-for="City.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City.PopularLandMark" class="control-label"></label>
                <input asp-for="City.PopularLandMark" class="form-control" />
                <span asp-validation-for="City.PopularLandMark" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="City.Picture" class="control-label"></label>
                <input asp-for="CityPictureName" class="form-control" readonly="@(true)">
                <span asp-validation-for="City.Picture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityPictureFile" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="CityPictureFile" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile"></label>
                </div>
                <span asp-validation-for="CityPictureFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
           @* <div class="form-group">
                <label asp-for="Picture" class="control-label"></label>
                <input asp-for="Picture" class="form-control" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>*@
        </form>
    </div>
</div>

<div>
    <a asp-action="Details">Back to Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
